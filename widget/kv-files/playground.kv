MDBoxLayout:
    orientation: 'vertical'

    MDToolbar:
        title: "Kivy Development Environment 2.0"
        md_bg_color: app.theme_cls.bg_darkest
        right_action_items: [["discord", lambda open_discord: open_link("https://discord.gg/3ZaVT4RR")], ["github", lambda open_github: open_link("https://github.com/PenguinProMax5G/Kivy-Development-Environment/")], ["format-letter-case-lower", lambda filechooser: app.open_file_manager()]]

    MDTabs:
        id: tabs
        # tab_indicator_type: "line-round"
        tab_indication_anim: True
        ripple_duration: 3
        spacing: "10sp"
        background_color: app.theme_cls.bg_darkest


        # text_color_active: (0,0,0.5,1)


<Seperator@Widget>
    size_hint_y: None
    height: "10sp"

<MDSeperator@Widget>
    size_hint_y: None
    height: "20sp"

<PlayGround>
    ScrollView:
        do_scroll_y: True
        scroll_type: ["bars", "content"] 

        MDBoxLayout:
            orientation: 'vertical'
            padding: "20sp"
            spacing: "20sp"
            size_hint_y: None
            height: 650


            MDGridLayout:
                rows: 14
                spacing: "15sp"
                
                MDTextField:
                    hint_text: "Enter Width"
                    icon_right: "ruler"
                    id: width
                    icon_right_color: app.theme_cls.primary_dark
                    on_text: app.set_property(self, "width")
                    helper_text: "A numerical value like 155, 255."
                    helper_text_mode: "on_focus"
                    disabled: app.disabled

                
                MDTextField:
                    hint_text: "Enter Height"
                    icon_right: "ruler-square"
                    id: height
                    icon_right_color: app.theme_cls.primary_dark
                    helper_text: "A numerical value like 155, 255."
                    helper_text_mode: "on_focus"
                    on_text: app.set_property(self, "height")
                    disabled: app.disabled


                MDTextField:
                    hint_text: "Enter Text"
                    icon_right: "text"
                    id: text
                    icon_right_color: app.theme_cls.primary_dark
                    multiline: True
                    helper_text: "A sentence, a word or an alphabet like 'Pick ME!', 'Change ME!', 'Hello World!'."
                    helper_text_mode: "on_focus"
                    on_text: app.set_property(self,"text")
                    disabled: app.disabled

                
                # MDSeperator

                # MDSeperator:


                MDTextField:
                    hint_text: "Enter Font Size"
                    icon_right: "format-letter-case"
                    id: font_size
                    icon_right_color: app.theme_cls.primary_dark
                    helper_text: "A numerical value like 50, with or without a unit like '50sp', '50dp', '50pt'."
                    on_text: app.set_property(self,"font_size")
                    helper_text_mode: "on_focus"
                    disabled: app.disabled

                MDTextField:
                    hint_text: "Set Text Color"
                    icon_right: "palette-outline"
                    id: txt_clr
                    icon_right_color: app.theme_cls.primary_dark
                    on_text: app.set_property(self, "text_color")
                    helper_text_mode: "on_focus"
                    helper_text: "A hexadecimal value or the name of a template color like 'White', 'Black'."
                    disabled: app.disabled

                MDTextField:
                    hint_text: "Set Background Color"
                    icon_right: "palette"
                    id: bg_clr
                    icon_right_color: app.theme_cls.primary_dark
                    on_text: app.set_property(self, "bg_color")
                    helper_text_mode: "on_focus"
                    helper_text: "A hexadecimal value or the name of a template color like 'White', 'Black'."
                    disabled: app.disabled

                
                MDTextField:
                    hint_text: "Enter Position X"
                    icon_right: "compass"
                    id: pos_x
                    icon_right_color: app.theme_cls.primary_dark
                    on_text: app.set_property(self, "pos_x")
                    helper_text: "A numerical value like 50, 60."
                    helper_text_mode: "on_focus"
                    disabled: app.disabled

                MDTextField:
                    hint_text: "Enter Position Y"
                    icon_right: "compass-outline"
                    id: pos_y
                    icon_right_color: app.theme_cls.primary_dark
                    on_text: app.set_property(self, "pos_y")
                    helper_text: "A numerical value like 50, 60."
                    helper_text_mode: "on_focus"
                    disabled: app.disabled


                MDSeperator:
                MDBoxLayout:
                    orientation: "vertical"


                    MDLabel:
                        text: "Disable Button"
                        font_size: sp(18.5)
                        bold: True


                    AnchorLayout:
                        anchor_x: "right"
                        anchor_y: "center"
                        padding: 1100      

                        MDSwitch:
                            id: switch
                            widget_style: "android"
                            active: False
                            on_press: app.disable_button(self, self.active)

                                        
                Seperator:
                    
                MDLabel:
                    text: app.path
                    halign: "center"
                    font_size: "20sp"

