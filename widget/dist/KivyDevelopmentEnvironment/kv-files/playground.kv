#:import Window kivy.core.window.Window
#:import KivyLexer kivy.extras.highlight.KivyLexer
#:import colors kivymd.color_definitions.colors
#:import open_link scripts.script.open_link
#:import change_theme scripts.script.change_theme


MDBoxLayout:
    orientation: 'vertical'

    MDToolbar:
        title: "Kivy Development Environment 2.5"
        # right_action_items: [["white-balance-sunny", lambda switch: change_theme(app)], ["discord", lambda open_discord: open_link("https://discord.gg/3ZaVT4RR")], ["github", lambda open_github: open_link("https://github.com/PenguinProMax5G/Kivy-Development-Environment/")], ["format-letter-case-lower", lambda filechooser: app.open_file_manager()]]
        right_action_items: [["white-balance-sunny", lambda switch: change_theme(app)], ["discord", lambda open_discord: open_link("https://discord.gg/3ZaVT4RR")], ["github", lambda open_github: open_link("https://github.com/PenguinProMax5G/Kivy-Development-Environment/")], ["format-letter-case-lower", lambda filechooser: app.open_file_manager()], ["palette", lambda theme_change: app.change_palette()]]
        
        id: toolbar
    MDTabs:
        id: tabs


<Seperator@Widget>
    size_hint_y: None
    height: "10sp"

<MDSeperator@Widget>
    size_hint_y: None
    height: "20sp"

<PlayGround>
    ScrollView:
        do_scroll_y: True
        scroll_type: ["bars", "content"] 

        MDBoxLayout:
            orientation: 'vertical'
            padding: "20sp"
            spacing: "20sp"
            size_hint_y: None
            height: 600


            MDGridLayout:
                rows: 14
                spacing: "15sp"
                
                MDTextField:
                    hint_text: "Enter Width"
                    icon_right: "ruler"
                    # mode: "fill"
                    id: width
                    icon_right_color: app.theme_cls.primary_dark
                    on_text: app.set_property(self, "width")
                    helper_text: "A numerical value like 50, 60, 70."
                    helper_text_mode: "on_focus"
                    disabled: app.disabled

                
                MDTextField:
                    hint_text: "Enter Height"
                    icon_right: "ruler-square"
                    id: height
                    icon_right_color: app.theme_cls.primary_dark
                    helper_text: "A numerical value like 50, 60, 70."
                    helper_text_mode: "on_focus"
                    on_text: app.set_property(self, "height")
                    disabled: app.disabled


                MDTextField:
                    hint_text: "Enter Text"
                    icon_right: "text"
                    id: text
                    icon_right_color: app.theme_cls.primary_dark
                    multiline: True
                    helper_text: "A sentence, a word or an alphabet like 'Pick ME!', 'Change ME!', 'Hello World!'."
                    helper_text_mode: "on_focus"
                    on_text: app.set_property(self,"text")
                    disabled: app.disabled


                MDTextField:
                    hint_text: "Enter Font Size"
                    icon_right: "format-letter-case"
                    id: font_size
                    icon_right_color: app.theme_cls.primary_dark
                    helper_text: "A numerical value like 50, with or without a unit like '50sp', '50dp', '50pt'."
                    on_text: app.set_property(self,"font_size")
                    helper_text_mode: "on_focus"
                    disabled: app.disabled

                MDTextField:
                    hint_text: "Set Text Color"
                    icon_right: "palette-outline"
                    id: txt_clr
                    icon_right_color: app.theme_cls.primary_dark
                    on_text: app.set_property(self, "text_color")
                    helper_text_mode: "on_focus"
                    helper_text: "A hexadecimal value or the name of a template color like 'White', 'Black' or a theme color (primary_color, primary_dark)."
                    disabled: app.disabled

                MDTextField:
                    hint_text: "Set Background Color"
                    icon_right: "palette"
                    id: bg_clr
                    icon_right_color: app.theme_cls.primary_dark
                    on_text: app.set_property(self, "bg_color")
                    helper_text_mode: "on_focus"
                    helper_text: "A hexadecimal value or the name of a template color like 'White', 'Black' or a theme color (primary_color, primary_dark)."
                    disabled: app.disabled

                
                MDTextField:
                    hint_text: "Enter Position X"
                    icon_right: "compass"
                    id: pos_x
                    icon_right_color: app.theme_cls.primary_dark
                    on_text: app.set_property(self, "pos_x")
                    helper_text: "A numerical value like 50, 60."
                    helper_text_mode: "on_focus"
                    disabled: app.disabled

                MDTextField:
                    hint_text: "Enter Position Y"
                    icon_right: "compass-outline"
                    id: pos_y
                    icon_right_color: app.theme_cls.primary_dark
                    on_text: app.set_property(self, "pos_y")
                    helper_text: "A numerical value like 50, 60."
                    helper_text_mode: "on_focus"
                    disabled: app.disabled


                
               

                    

